{
  "name": "@codemastersolutions/taskly",
  "version": "0.0.6",
  "description": "Zero-deps concurrent command runner and CLI (npm/yarn/pnpm/bun/shell/powershell/cmd/bat)",
  "type": "module",
  "license": "MIT",
  "author": "CodeMaster Soluções",
  "repository": {
    "type": "git",
    "url": "https://github.com/codemastersolutions/taskly.git"
  },
  "homepage": "https://github.com/codemastersolutions/taskly",
  "bugs": {
    "url": "https://github.com/codemastersolutions/taskly/issues"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "bin": {
    "taskly": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:dev": "pnpm clean && tsc -p tsconfig.json",
    "build": "pnpm clean && tsc -p tsconfig.json && node scripts/minify.mjs --preserve-maps",
    "build:prod": "pnpm clean && tsc -p tsconfig.prod.json && node scripts/minify.mjs",
    "lint": "eslint . --ext .ts",
    "test": "vitest --coverage --run",
    "commitzero": "commitzero",
    "commitzero:install": "pnpm exec commitzero install-hooks",
    "commitzero:uninstall": "pnpm exec commitzero uninstall-hooks",
    "commit": "pnpm run commitzero commit -a",
    "commit:push": "pnpm run commitzero commit --add --push"
  },
  "devDependencies": {
    "@codemastersolutions/commitzero": "^0.0.41",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@codemastersolutions/commitzero"
    ]
  }
}
